@model GuildCars2.UI.ViewModel.HomeContactVM



<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Specials</title>
	<h1>Contact</h1>
</head>
<body>
	<div>
		@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
		{

			<fieldset>

				<div class="form-group">
					<label>Name</label>
						@Html.TextBoxFor(m => m.Form.Name)
				</div>

				<div class="form-group">
					<label>Email</label>
						@Html.TextBoxFor(m => m.Form.Email)
				</div>

				<div class="form-group">
					<label>Phone</label>
						@Html.TextBoxFor(m => m.Form.PhoneNumber)
				</div>

				<div class="form-group">
					<label>Message</label>
						@Html.TextAreaFor(m => m.Form.Message)
				</div>

				<div class="form-group">
					<label class="col-md-4 control-label" for="Submit"></label>
					<div class="col-md-4">
						<button class="btn btn-primary">Submit</button>
					</div>
				</div>

			</fieldset>
		}
	</div>
</body>
</html>
