@model GuildCars2.UI.ViewModel.SalesIndexPuchaseVM


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Purchase</title>
</head>
<body>
	<h1>Purchase</h1>
	<table>
		<tr>
			<td>@Html.Display(Model.Year)</td>
			<td>@Html.Display(Model.Make)</td>
			<td>@Html.Display(Model.Model)</td>
		</tr>
		<tr>
			<td>Body Style: @Html.Display(Model.BodyStyle)</td>
			<td>Interior: @Html.Display(Model.Interior)</td>
			<td>Sale Price: @Html.Display(Model.SalePrice.ToString())</td>
		</tr>
		<tr>
			<td>Transmission: @Html.Display(Model.Transmission)</td>
			<td>Mileage: @Html.Display(Model.Mileage.ToString())</td>
			<td>MSRP: @Html.Display(Model.Msrp.ToString())</td>
		</tr>
		<tr>
			<td>Color: @Html.Display(Model.Color)</td>
			<td>Vin: @Html.Display(Model.Vin)</td>
		</tr>
	</table>
	<div>
		@using (Html.BeginForm("Purchase", "Sales", FormMethod.Post))
		{
			<fieldset>

				<div class="form-group">
					<label>Name</label>
					@Html.TextBoxFor(m => m.Form.Name)


					<label>Phone</label>
					@Html.TextBoxFor(m => m.Form.Phone)

				</div>

				<div class="form-group">
					<label>Email</label>
					@Html.TextBoxFor(m => m.Form.Email)

				</div>

				<div class="form-group">
					<label>Street 1</label>
					@Html.TextBoxFor(m => m.Form.StreetOne)


					<label>Street 2</label>
					@Html.TextBoxFor(m => m.Form.StreetTwo)

				</div>

				<div class="form-group">
					<label>City</label>
					@Html.TextBoxFor(m => m.Form.City)


					<label>State</label>
					@Html.DropDownListFor(m => m.Form.State, Model.State)
				</div>

				<div class="form-group">
					<label>Zipcode</label>
					@Html.TextBoxFor(m => m.Form.Zipcode)
				</div>

				<div class="form-group">
					<label>Purchase Price</label>
					@Html.TextBoxFor(m => m.Form.PurchasePrice)

					<label>Purchase Type</label>
					@Html.DropDownListFor(m => m.Form.PurchaseType, Model.PurchaseType)
				</div>

				<div class="form-group">
					<button class="btn btn-primary">Submit</button>
				</div>

			</fieldset>
		}
	</div>
</body>
</html>
