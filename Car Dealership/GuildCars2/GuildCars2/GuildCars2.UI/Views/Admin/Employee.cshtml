@model GuildCars2.UI.ViewModel.AdminEmployeeVM



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee</title>
</head>
<body>
	<div>
		@using (Html.BeginForm("Employee", "Admin", FormMethod.Get))
		{
		<table>
			<tr>
				<th>Last Name</th>
				<th>First Name</th>
				<th>Email</th>
				<th>Role</th>
				<th></th>
			</tr>
			@foreach (var item in Model.Users)
			{
			<tr>
				<td>@item.LastName</td>
				<td>@item.FirstName</td>
				<td>@item.Email</td>
				<td>@item.Role</td>
				<td> @Html.ActionLink("Edit", "EditEmployee", "Admin", new { id = item.EmployeeId }, new { @class = "btn btn-primary" })</td>
			</tr>
			}
		</table>
		}
	</div>
</body>
</html>
